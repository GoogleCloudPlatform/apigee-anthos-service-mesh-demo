{
  "name": "apigee-service-portal",
  "options": {
      "allow-unauthenticated": true,
      "memory": "512Mi",
      "cpu": "1",
      "port": 8080,
      "http2": false
  },
  "hooks": {
      "prebuild": {
          "commands": [
              "export PROJECT=\"$GOOGLE_CLOUD_PROJECT\"",
              "gcloud config set project \"$GOOGLE_CLOUD_PROJECT\"",
              "gcloud services enable compute.googleapis.com",
              "echo \"Creating default network...\"",
              "gcloud compute networks create default --subnet-mode=auto --bgp-routing-mode=regional --mtu=1460 || true",
              "echo \"Provisioning Apigee...\"",
              "echo \"Finished provisioning Apigee...\"",
              "export RUNTIME_IP=$(gcloud compute addresses describe lb-ipv4-vip-1 --format=\"get(address)\" --global --project \"$GOOGLE_CLOUD_PROJECT\" --quiet)",
              "sed -i \"s@{SERVER_HOST}@https://eval-group.$RUNTIME_IP.nip.io@\" apigee-asm-demo/specs/productservice.yaml",
              "cp apigee-asm-demo/specs/productservice.yaml apigee-asm-demo/portal/client/productservice.yaml"
          ]
      },
      "postbuild": {
          "commands": [
          ]
      },
      "precreate": {
          "commands": [
          ]
      },
      "postcreate": {
          "commands": [
          ]
      }
  }
}